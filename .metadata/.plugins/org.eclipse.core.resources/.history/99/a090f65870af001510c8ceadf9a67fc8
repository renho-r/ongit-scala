package com.renho.scala.forloop

object TestForLoop {
    def main(args: Array[String]): Unit = {
        var a = 0;
        for (a <- 1 to 10) {
            println(a);
        }
        println("--------><--------");
        for (a <- 1 until 10) {
            println(a);
        }
        println("--------><--------");
        a = 0;
        var b = 0;
        // for loop execution with a range
        for (a <- 1 to 3; b <- 1 to 3) {
            println("Value of a: " + a);
            println("Value of b: " + b);
        }
    }
}